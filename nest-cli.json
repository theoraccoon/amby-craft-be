{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/config/lang/**/*",
        "outDir": "dist/src/config/lang"
      },
      {
        "include": "assets/**/*",
        "outDir": "dist/src/modules"
      }
    ]
  }
}
